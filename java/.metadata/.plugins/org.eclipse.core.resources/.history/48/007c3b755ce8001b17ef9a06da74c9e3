package lesson001;

public class E014_doWhile {

	public static void main(String[] args) {
		// years to be checked
		int year = 1992 ;
		boolean leap = false;

		// if the year is devided by 4
		if(year % 4 == 0) {

			//if the year is century
			if(year % 100 == 0 ) {

				//if year is devided by 400
				// then it is a leap year
				if(year % 400 == 0)
					leap = true;
				else
					leap = false;
			}

			//if the year is not century
			else
				leap = true;
		}

		else
			leap = false;

		if(leap)
			System.out.println(year + "is a leap year.");
		else
			System.out.println(year + "is not a leap year.");

	}

}